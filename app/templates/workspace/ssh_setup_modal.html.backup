<!-- SSH Setup Modal for Private Repository Access -->
<div id="ssh-setup-modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-3xl w-full mx-4 max-h-[90vh] overflow-auto">
        <div class="p-6">
            <!-- Header -->
            <div class="flex items-start justify-between mb-6">
                <div>
                    <h3 class="text-2xl font-semibold text-gray-900 flex items-center gap-2">
                        <svg class="h-7 w-7 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                        SSH Key Setup Required
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                        Your workspace requires access to private GitHub repositories
                    </p>
                </div>
            </div>

            <!-- Workspace Info -->
            <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-start gap-3">
                    <svg class="h-5 w-5 text-blue-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div>
                        <p class="text-sm font-medium text-blue-900">
                            Your workspace "<strong id="workspace-name">{{ workspace.name }}</strong>" has been created successfully!
                        </p>
                        <p class="text-sm text-blue-700 mt-1">
                            To access private repositories (e.g., Odoo Enterprise), you need to add the SSH key to your GitHub account.
                        </p>
                    </div>
                </div>
            </div>

            <!-- SSH Public Key Section -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Your Workspace SSH Public Key
                </label>
                <div class="relative">
                    <textarea
                        id="ssh-public-key"
                        readonly
                        class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-sm font-mono resize-none"
                        rows="3"
                        onclick="this.select()"
                    >{{ workspace.ssh_public_key }}</textarea>
                    <button
                        onclick="copySshKey()"
                        class="absolute top-2 right-2 inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                    >
                        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        Copy
                    </button>
                </div>
                <p class="mt-1 text-xs text-gray-500">
                    Click to select all, or use the Copy button
                </p>
            </div>

            <!-- Setup Instructions -->
            <div class="mb-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-3 flex items-center gap-2">
                    <svg class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Setup Instructions
                </h4>

                <ol class="space-y-4">
                    <!-- Step 1 -->
                    <li class="flex gap-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                            1
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">Copy the SSH public key above</p>
                            <p class="text-sm text-gray-600 mt-1">
                                Use the "Copy" button or click the key to select all and press Ctrl+C (Cmd+C on Mac)
                            </p>
                        </div>
                    </li>

                    <!-- Step 2 -->
                    <li class="flex gap-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                            2
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">Go to GitHub SSH Keys Settings</p>
                            <p class="text-sm text-gray-600 mt-1">
                                Open
                                <a href="https://github.com/settings/ssh/new" target="_blank" rel="noopener noreferrer"
                                   class="text-indigo-600 hover:text-indigo-800 font-medium">
                                    GitHub → Settings → SSH Keys
                                    <svg class="inline h-3 w-3 ml-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                </a>
                                in a new tab
                            </p>
                        </div>
                    </li>

                    <!-- Step 3 -->
                    <li class="flex gap-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                            3
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">Add new SSH key</p>
                            <div class="mt-2 text-sm text-gray-600 space-y-1">
                                <p>• <strong>Title:</strong> <code class="bg-gray-100 px-1.5 py-0.5 rounded text-xs">{{ workspace.subdomain }} - YouAreCoder</code></p>
                                <p>• <strong>Key type:</strong> Authentication Key</p>
                                <p>• <strong>Key:</strong> Paste your copied SSH public key</p>
                            </div>
                        </div>
                    </li>

                    <!-- Step 4 -->
                    <li class="flex gap-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                            4
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">Click "Add SSH key" on GitHub</p>
                            <p class="text-sm text-gray-600 mt-1">
                                You may be prompted to confirm your GitHub password
                            </p>
                        </div>
                    </li>

                    <!-- Step 5 -->
                    <li class="flex gap-3">
                        <div class="flex-shrink-0 w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                            5
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">Verify SSH connection and open workspace</p>
                            <p class="text-sm text-gray-600 mt-1">
                                Click the "Verify & Open Workspace" button below to test the connection
                            </p>
                        </div>
                    </li>
                </ol>
            </div>

            <!-- Important Notes -->
            <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <div class="flex items-start gap-3">
                    <svg class="h-5 w-5 text-yellow-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-yellow-900 mb-1">Important Notes:</p>
                        <ul class="text-sm text-yellow-800 space-y-1 list-disc list-inside">
                            <li>This SSH key is unique to your workspace</li>
                            <li>Keep this key in your GitHub account while using this workspace</li>
                            <li>You can add the same key to multiple GitHub accounts if needed</li>
                            <li>The SSH key is also included in your workspace ready email</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Verification Status -->
            <div id="verification-status" class="mb-6 hidden">
                <!-- Will be populated by JavaScript -->
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center gap-3">
                <button
                    id="verify-button"
                    onclick="verifySshAndOpen()"
                    class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-2.5 border border-transparent shadow-sm text-sm font-semibold rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Verify & Open Workspace
                </button>

                <button
                    onclick="skipSshSetup()"
                    class="px-4 py-2.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                    Skip for Now
                </button>
            </div>

            <p class="mt-3 text-xs text-gray-500 text-center">
                You can access this information anytime from your workspace management panel
            </p>
        </div>
    </div>
</div>

<script>
// Copy SSH key to clipboard
function copySshKey() {
    const sshKey = document.getElementById('ssh-public-key');
    sshKey.select();
    document.execCommand('copy');

    // Visual feedback
    const button = event.target.closest('button');
    const originalHtml = button.innerHTML;
    button.innerHTML = `
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Copied!
    `;
    button.classList.add('bg-green-50', 'border-green-300', 'text-green-700');

    setTimeout(() => {
        button.innerHTML = originalHtml;
        button.classList.remove('bg-green-50', 'border-green-300', 'text-green-700');
    }, 2000);
}

// Verify SSH and open workspace
async function verifySshAndOpen() {
    const button = document.getElementById('verify-button');
    const statusDiv = document.getElementById('verification-status');

    // Show loading state
    button.disabled = true;
    button.innerHTML = `
        <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Verifying SSH Connection...
    `;

    try {
        const workspaceId = '{{ workspace.id }}';
        const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        const response = await fetch(`/workspace/${workspaceId}/verify-ssh`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRFToken': csrfToken
            }
        });

        const data = await response.json();

        statusDiv.classList.remove('hidden');

        if (data.success && data.ssh_verified) {
            // Success - SSH verified
            statusDiv.innerHTML = `
                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-start gap-3">
                        <svg class="h-5 w-5 text-green-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-green-900">
                                ✓ SSH connection verified successfully!
                            </p>
                            <p class="text-sm text-green-700 mt-1">
                                Your workspace can now access private GitHub repositories.
                            </p>
                        </div>
                    </div>
                </div>
            `;

            // Close modal and let provisioning continue
            setTimeout(() => {
                document.getElementById('ssh-setup-modal').classList.add('hidden');
            }, 2000);

        } else {
            // SSH verification failed
            statusDiv.innerHTML = `
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex items-start gap-3">
                        <svg class="h-5 w-5 text-red-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-red-900">
                                SSH verification failed
                            </p>
                            <p class="text-sm text-red-700 mt-1">
                                Please make sure you've added the SSH key to your GitHub account and try again.
                            </p>
                        </div>
                    </div>
                </div>
            `;

            button.disabled = false;
            button.innerHTML = `
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Retry Verification
            `;
        }

    } catch (error) {
        console.error('SSH verification error:', error);
        statusDiv.classList.remove('hidden');
        statusDiv.innerHTML = `
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-start gap-3">
                    <svg class="h-5 w-5 text-red-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-red-900">
                            Error verifying SSH connection
                        </p>
                        <p class="text-sm text-red-700 mt-1">
                            ${error.message || 'An unexpected error occurred. Please try again.'}
                        </p>
                    </div>
                </div>
            </div>
        `;

        button.disabled = false;
        button.innerHTML = `
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Retry Verification
        `;
    }
}

// Skip SSH setup and go to workspace
function skipSshSetup() {
    if (confirm('Are you sure you want to skip SSH setup? You won\'t be able to clone private repositories until you add the SSH key.')) {
        window.location.href = '{{ workspace.get_access_url() }}';
    }
}

// Modal will only open when user clicks 'Setup SSH Key' button
// No auto-open on page load
</script>
